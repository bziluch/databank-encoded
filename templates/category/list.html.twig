{% extends 'base.html.twig' %}

{% block title %}Category list{% endblock %}
{% block page_title %}Category list{% endblock %}

{% block actions %}
    <div class="pt-2 pb-2">
        <a href="{{ category is defined ? path('app_subcategory_new', {'id' : category.id}) : path('app_category_new') }}">
            <button type="button" class="btn btn-sm btn-outline-info">Add category</button>
        </a>
    </div>
{% endblock %}

{% block body %}
    <div class="category-list-container">
        {% for category in categories %}
            {% include 'parts/category-row.html.twig' with {last: loop.last, first: loop.first, category: category} %}
        {% endfor %}
        {% for thread in threads %}
            {% include 'parts/post-row.html.twig' with {last: loop.last, first: loop.first, thread: thread} %}
        {% endfor %}
    </div>
{% endblock %}
